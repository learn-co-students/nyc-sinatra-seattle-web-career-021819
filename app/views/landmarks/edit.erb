<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="landmark[name]">Name:</label>
  <input type="text" name="landmark[name]" value="<%= @landmark.name %>" id="name">
  <label for="landmark[year_completed]">Year Completed:</label>
  <input type="integer" name="landmark[year_completed]" value="<%= @landmark.year_completed %>" id="year_completed">
  <input type="submit" value="Edit Landmark">
</form>


<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
